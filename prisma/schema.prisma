generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id              String   @id @default(uuid())
  fullName        String
  email           String   @unique
  passwordHash    String?
  provider        AuthProvider

  role            Role
  isOnboarded     Boolean  @default(false)
  isActive        Boolean @default(true)      

  emailVerified   Boolean  @default(false)
  otpHash         String?
  otpExpiresAt    DateTime?
  refreshToken    String?
  resetPasswordToken String?
  resetPasswordExpires DateTime? 
  investorProfile        InvestorProfile?
  ideas                  Idea[]  

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model InvestorProfile {
  id               String     @id @default(uuid())
  userId           String     @unique
  preferredStages  Stage[]
  industries       Industry[]
  minFunding       Float
  maxFunding       Float
  investmentThesis String
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt

  user             User       @relation(fields: [userId], references: [id])
}


model Idea {
  id            String   @id @default(uuid())
  founderId     String

  startupName   String
  pitchTitle    String
  description   String

  industry      Industry
  stage         Stage

  fundingAmount Float
  roundType     String?
  equityOffered Boolean

  region        String

  pitchDeckUrl  String?
  pitchDeckId   String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([industry])
  @@index([fundingAmount])
  @@index([stage])
  @@index([region])
  @@index([createdAt])
  @@index([industry, fundingAmount])

  founder       User     @relation(fields: [founderId], references: [id])
}




enum Role {
  ENTREPRENEUR
  INVESTOR
  ADMIN
}


enum AuthProvider {
  LOCAL
  GOOGLE
}


enum Stage {
  IDEA_STAGE
  PROTOTYPE
  MVP
  EARLY_REVENUE
  SCALING
  SERIES_A
}

enum Industry {
  TECHNOLOGY
  HEALTHCARE
  FINTECH
  ENERGY
  AI
  ECOMMERCE
  EDTECH
}
